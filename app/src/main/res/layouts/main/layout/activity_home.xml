<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginTop="24dp"
        android:elevation="1dp" />
    <SurfaceView
        android:id="@+id/surfaceView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <View
        android:background="#71000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <Button
        android:id="@+id/btn_link1"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="false"
        android:layout_alignWithParentIfMissing="false"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="false"
        android:layout_marginTop="150dp"
        android:background="@drawable/button_grey"
        android:text="เตือนภัยดินถล่ม"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btn_link2"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_alignEnd="@+id/btn_link1"
        android:layout_below="@+id/btn_link1"
        android:layout_marginTop="26dp"
        android:background="@drawable/button_grey"
        android:text="เตือนภัยดินถล่มล่วงหน้า 3 วัน"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btn_link3"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_alignEnd="@+id/btn_link2"
        android:layout_below="@+id/btn_link2"
        android:layout_marginTop="26dp"
        android:background="@drawable/button_grey"
        android:text="ระบบติดตามพฤติกรรมพื้นที่เสี่ยงดินถล่ม"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btn_link4"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_alignEnd="@+id/btn_link3"
        android:layout_below="@+id/btn_link3"
        android:layout_marginTop="25dp"
        android:background="@drawable/button_grey"
        android:text="เตือนภัยปริมาณน้ำฝนสะสม"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="false"
        android:layout_alignParentRight="false"
        android:layout_alignParentTop="false"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        app:srcCompat="@drawable/logo_gerd" />
</RelativeLayout>