<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/charcoal">


    <TextView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="20dp"
        android:paddingLeft="@dimen/margin_header"
        android:paddingRight="@dimen/margin_header"
        android:paddingTop="20dp"
        android:text="ตารางแสดงระดับการเตือนภัยดินถล่มโดยปริมาณน้ำฝนสะสม 3 วัน"
        android:textColor="@color/red"
        android:textSize="20sp" />
    <com.cleveroad.adaptivetablelayout.AdaptiveTableLayout
        android:background="@color/grey"
        android:layout_below="@id/header"
        android:id="@+id/tableLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cellMargin="1dp"
        app:dragAndDropEnabled="true"
        app:fixedHeaders="true"
        app:solidRowHeaders="true" />
</RelativeLayout>